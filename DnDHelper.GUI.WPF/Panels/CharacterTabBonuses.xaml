<UserControl x:Class="DnDHelper.GUI.WPF.Panels.CharacterTabBonuses"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="620" d:DesignWidth="800">
    <Grid>
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="12,12,0,0" Name="textBlock1" Text="Bonusy inicjalne:" VerticalAlignment="Top" />
        <ListBox Height="249" HorizontalAlignment="Left" Margin="12,32,0,0" ItemsSource="{Binding OriginalBonuses}" VerticalAlignment="Top" Width="596" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="12,287,0,0"  Text="Bonusy bieżące:" VerticalAlignment="Top" />
        <ListBox Height="296" HorizontalAlignment="Left" Margin="12,308,0,0" ItemsSource="{Binding CurrentBonuses}"  VerticalAlignment="Top" Width="596" />
    </Grid>
</UserControl>
